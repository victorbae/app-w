		<div class="form-group">
			<button type="button" class="btn btn-dark" onclick="window.location.href='novo';">Novo Registro</button>
		</div>	
		<table class="table table-striped table-dark">
	 		<thead class="thead-dark">
		    	<tr>
		    		<th scope="col">#</th>
		      		<th scope="col">Empresa</th>
		      		<th scope="col">Produto</th>
		      		<th scope="col">Data</th>
		      		<th scope="col">Valor</th>
		    	</tr>
	  		</thead>
		  	<tbody>
		  		<% if(registros != null){
			  		for(var i = 0; i < registros.length; i++){ %>
			  		<tr>
						<th scope="row"><%= registros[i].id %></th>
					    <td><%= registros[i].empresa.nome %></td>
					    <td><%= registros[i].produto.nome %></td>
					    <td><%= registros[i].data %></td>
					    <td><%= registros[i].valor %></td>
				    </tr>
		  		<%} 
		  	} %>
		  	</tbody>
		</table>
