<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Lista Empresas</title>
    <link rel="stylesheet" href="../assets/css/bootstrap.css">
    <link rel="stylesheet" href="../assets/css/style-paginas.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand text-white">App-W Writer</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse text-white" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item ">
                    <a class="nav-link" href="/home">Home</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="/empresa/lista">Empresa</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/produto/lista">Produto</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/registro/lista">Registro</a>
                </li>
            </ul>
        </div>
        <ul class="navbar-nav">
            <li class="nav-item pull-right">
                <a class="nav-link" href="/login">Logout</a>
            </li>
        </ul>
    </nav>
    <hr class="my-4">
	<div class="row justify-content-center">
		<div class="col-sm-8">
		<div class="form-group">
			<button type="button" class="btn btn-dark" onclick="window.location.href='novo';">Novo Registro</button>
		</div>	
		<div class="table-responsive">
			<table class="table table-bordered table-hover table-striped">
		 		<thead class="thead-dark">
			    	<tr>
			    		<th scope="col">#</th>
			      		<th scope="col">Empresa</th>
			      		<th scope="col">Produto</th>
			      		<th scope="col">Data</th>
			      		<th scope="col">Valor</th>
			      		<th scope="col">Opções</th>
			    	</tr>
		  		</thead>
			  	<tbody>
			  		<% if(registros != null){
				  		for(var i = 0; i < registros.length; i++){ %>
				  		<tr>
							<th scope="row"><%= registros[i].id %></th>
						    <td><%= registros[i].empresa.nome %></td>
						    <td><%= registros[i].produto.nome %></td>
						    <td><%= registros[i].data %></td>
						    <td><%= registros[i].valor %></td>
						    <td><button class="btn btn-outline-primary btn-sm" onclick="location.href='editar/<%= registros[i].id %>'"><i class="fas fa-pencil-alt"></i></button>
						    	<button class="btn btn-outline-danger btn-sm" onclick="location.href='excluir/<%= registros[i].id %>'"><i class="far fa-trash-alt"></i></button>
						    </td>
					    </tr>
			  		<%} 
			  	} %>
			  	</tbody>
			</table>
		</div>
	</div>
	</div>
