  <div class="row justify-content-center">
    <div class="col-sm-8">
      <form method="post" action="salvar">
          <h4>Novo Registro</h4>
              <div class="form-group">
                  <input type="hidden" name="registro" value="<%= registro.id %>">
                  <select class="form-control" name="empresa" value="<%= registro.empresa %>"  required>
                    <% if(empresas != null){
                    for(var i = 0; i < empresas.length; i++){ %>
                    <option value="<%= empresas[i].id %>"><%= empresas[i].nome %></option>
                    <% }
                  } %>
                  </select>
                </div>
              <div class="form-group">
                  <select class="form-control" name="produto" value="<%= registro.produto %>" required>
                    <% if(produtos != null){
                    for(var i = 0; i < produtos.length; i++){ %>
                    <option value="<%= produtos[i].id %>"><%= produtos[i].nome %></option>
                    <% }
                  } %>
                  </select>
                </div>
              <div class="form-group">
                <input type="date" class="form-control" value="registro.data" name="data" value="<%= registro.data %>" required>                
              </div>
              <div class="form-group">
                <input id="valor" placeholder="Valor" type="text" class="form-control" value="<%= registro.valor %>" name="valor" required>  
              </div>
            <button type="submit" class="btn btn-primary pull-right">Salvar</button>
        </form>
    </div>
