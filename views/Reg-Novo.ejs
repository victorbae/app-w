  <hr class="my-4">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <form method="post" action="salvar">
          <h4>Novo Registro</h4>
              <input type="hidden" name="registro.id" value="<%= registro.id%>">
              <div class="form-group">
                  <select class="form-control" id="exampleFormControlSelect1" name="registro.empresa.id" value="registro.empresa.id" required>
                    <% if(empresas != null){
                    for(var i = 0; i < empresas.length; i++){ %>
                    <option><%= empresas[i].nome %></option>
                    <% }
                  } %>
                  </select>
                </div>
              <div class="form-group">
                  <select class="form-control" id="exampleFormControlSelect2" name="registro.produto.id" value="registro.produto.id" required>
                    <% if(produtos != null){
                    for(var i = 0; i < produtos.length; i++){ %>
                    <option><%= produtos[i].nome %></option>
                    <% }
                  } %>
                  </select>
                </div>
              <div class="form-group">
                <input type="date" class="form-control" id="data" value="registro.data" name="registro.data" required>                
              </div>
              <div class="form-group">
                <input placeholder="Valor" type="number" class="form-control" id="registro.valor" value="registro.valor" required>  
              </div>
            <button type="submit" class="btn btn-primary pull-right">Salvar</button>
        </form>
    </div>
  </div>
