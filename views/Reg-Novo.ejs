<%- include _header.ejs %>

<div class="row justify-content-center mt-4 mx-0">
  <h2 class="display-4">Registro</h2>
</div>
<div class="row justify-content-center mt-4 mx-0">
  <form class="col-sm-8 col-md-6 col-lg-4" method="post" action="/registro/salvar">
    <div class="form-group">
      <input type="hidden" name="id" value="<%= registro.id %>">
      <input type="hidden" id="codEmpresa" value="<%= registro.empresa != null ? registro.empresa.id : null %>">
      <select class="form-control" id="empresaSelect" name="empresa" required>
        <option>Selecione uma empresa</option>
        <% if(empresas != null){
          for(var i = 0; i < empresas.length; i++){ %>
            <option value="<%= empresas[i].id %>"><%= empresas[i].nome %></option>
          <% }
        } %>
      </select>
    </div>
    <div class="form-group">
      <input type="hidden" id="codProduto" value="<%= registro.produto != null ? registro.produto.id : null  %>">
      <select class="form-control" id="produtoSelect" name="produto" required>
        <option>Selecione um produto</option>
        <% if(produtos != null){
          for(var i = 0; i < produtos.length; i++){ %>
            <option value="<%= produtos[i].id %>"><%= produtos[i].nome %></option>
          <% }
        } %>
      </select>
    </div>
    <div class="form-group">
      <input type="date" class="form-control" id="dataRegistro" name="data" required value="<%= registro.data %>" placeholder="Data">
    </div>
    <div class="form-group">
      <input type="text" class="form-control"  id="valorRegistro" name="valor" required value="<%= registro.valor %>" placeholder="Valor">
    </div>
    <button type="submit" class="btn btn-primary pull-right">Salvar</button>
  </form>
</div>
</div>

<%- include _footer.ejs %>
